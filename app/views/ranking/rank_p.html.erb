<div class ="Main_T">ランキング</div>
<% if flash[:success] %>
  <div class="alert alert-success" style="text-align: center;">
    <%= flash[:success] %>
  </div>
<% end %>

<div class="rank" style="text-align: center;">
  <table>
    <thead>
    <tr>
      <th>順位</th>
      <th>名前</th>
      <th>正解率</th>
    </tr>
    </thead>
    <tbody>
    <% @top_users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.highest_rate %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= button_to "メインメニューへ", mains_main_path, method: :get,class: "R_B"%>