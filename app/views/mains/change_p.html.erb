<div class ="Main_T">パスワード変更</div>
<br>
<% if cookies[:name].present? && cookies[:password].present? %>
  <%= button_to "辞める", mains_main_path, method: :get,class: "R_B"%>
  <% else %>
  <%= button_to "辞める", root_path, method: :get,class: "R_B"%>
  <%end%>

<br>
<div style="text-align: center;">
  <%= form_with(url: "/change_p/update")do |f|%>
    <p>ID : <%= f.label @user.name %></p>
  <%= f.label :password変更 %>
  <%= f.password_field :password%>
  <br><br>
  <%= f.label :password確認 %>
  <%= f.password_field :password_confirmation %>
  <br><br>
  <%= f.submit "パスワード変更" ,method: :post %>
<% end %>
</div>
<% if flash[:fail] %>
  <div class="alert alert-success">
    <%= flash[:fail] %>
  </div>
<% end %>
